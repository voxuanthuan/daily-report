{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM" // Needed for VS Code APIs like window, document (if used)
    ],
    "sourceMap": true,
    "rootDir": ".", // Changed to include src/ and src/test/
    "outDir": "out", // Matches your compile-tests script
    "strict": true,
    "noImplicitAny": true, // Part of strict, but explicit for clarity
    "esModuleInterop": true, // For better module compatibility (e.g., axios)
    "skipLibCheck": true // Speeds up compilation, skips node_modules checks
  },
  "include": [
    "src/**/*", // Extension code
    "src/test/**/*" // Test files
  ],
  "exclude": [
    "node_modules",
    "dist" // Avoid recompiling esbuild output
  ]
}
